{
  "productName": "Ladder Legends Uploader",
  "version": "0.1.11",
  "identifier": "com.ladderlegends.uploader",
  "build": {
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "copyright": "Copyright (c) 2025 Ladder Legends",
    "license": "MIT",
    "shortDescription": "Automatically upload SC2 replays",
    "longDescription": "Automatically upload your StarCraft 2 replays to Ladder Legends Academy for instant analysis.",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": "Ladder Legends Academy"
    },
    "windows": {
      "signCommand": "signtool sign /sha1 2B3B7FBD4D58D71E3B70FDBE49F411F99BF29FA2 /fd SHA256 /v %1"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ladder-legends/ladder-legends-uploader/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJCMzMxOTU5OEQ3RkM4NzMKUldSenlIK05XUmt6dTVqcGVvcFU3N0UzckxJbzVuVjhPcUlKOS9tYTJsT3ZheWV2RUg0dFpjMS8K"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Ladder Legends Uploader",
        "width": 500,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": false,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://*.ladderlegendsacademy.com https://www.ladderlegendsacademy.com https://discord.com https://cdn.discordapp.com https://github.com https://api.github.com http://localhost:* https://localhost:*; img-src 'self' data: https://cdn.discordapp.com",
      "capabilities": ["main-capability"]
    },
    "withGlobalTauri": true
  }
}
